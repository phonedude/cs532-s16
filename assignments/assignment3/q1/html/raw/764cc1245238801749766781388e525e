<script>
	(function($) {
		if ($(window).width() > 640) {
			if (
				window.location.pathname !== '/events/consensus-2016/' &&
				!$.cookie('overlay-consensus-early-adopter-displayed')
			) {
				$('.overlay-consensus-early-adopter').modal({
					overlay: '#999',
					zIndex: 1002,
					showClose: false,
				});
				$('.overlay-consensus-early-adopter a.register').click(function() {
	                _gaq.push(['_trackEvent', 'Overlay', 'Events: Consensus 2016', 'Early adopter click']);
					_gaq.push(['_trackEvent', 'Events: Consensus 2016', 'Promotion Click', 'Overlay']);
	            });
				$.cookie(
					'overlay-consensus-early-adopter-displayed',
					1,
					{ expires: 14, path: '/' }
				);
				_gaq.push(['_trackEvent', 'Overlay', 'Events: Consensus 2016', 'Displayed', null, true]);
			}
		}
	})(jQuery);
</script>

