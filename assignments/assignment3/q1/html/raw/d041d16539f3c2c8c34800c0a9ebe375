			$(function(){
				var track = null;
				if($(document).width() >= 748){
					if(track == null){
						$('.column').equalHeight();
					}
				}

				$(window).resize(function(){
					if($(document).width() >= 1024){
						if(track == null || track != 1024){
							$('.column').css('min-height', 'auto');
							$('.column').equalHeight();
							track = 1024;
						}
					}
					else if($(document).width() >= 748){
						if(track == null || track != 748){
							$('.column').css('min-height', 'auto');
							$('.column').equalHeight();
							track = 748;
						}
					}else{
						if(track == 748 || track != 300){
							$('.column').css('min-height', 'auto');
							track = 300;
						}


					}
				});
			});
