        jQuery(document).ready(function () {
            if (document.getElementById("uxKeywords") != null)
                var keywords = document.getElementById("uxKeywords").value.split(",");
            jQuery.each(keywords, function (i) {
                var keyword = keywords[i];
                var wordsOnly = (keyword.indexOf(".") == -1 && keyword.indexOf("#") == -1 && keyword.indexOf("+") == -1 && keyword.indexOf("*") == -1);
                jQuery("#dvSearchDetailContainer").highlight(jQuery.trim(keyword.replace("\*", "")), { wordsOnly: wordsOnly });
