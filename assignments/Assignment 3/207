    <script language="javascript" type="text/javascript">
    

    $(document).ready(function () {
    //    $('.Refer').click(function (event) {
    //        var url = $(this).attr("href");
    //        var windowName = "popUp"; //$(this).attr("name");
    //        var windowWidth = 1000;
    //        var windowHeight = 600;
    //        var browserWidth = $(window).width();
    //        var browserHeight = $(window).height();
    //        var windowLeft = (browserWidth / 2) - (windowWidth / 2);
    //        var windowTop = (browserHeight / 2) - (windowHeight / 2);
    //        var windowSize = "width=" + windowWidth + ",height=" + windowHeight + ",left=" + windowLeft + ",top=" + windowTop + ",screenX=" + windowLeft + ",screenY=" + windowTop + ",scrollbars=yes";
    //        window.open(linkURL, windowName, windowSize);
    //        event.preventDefault();
    //    });
        $(".Apply.Top a").eq(0).show();
        $(".Apply.Top a").eq(1).hide();
        $(".Apply.Bottom a").eq(0).show();
        $(".Apply.Bottom a").eq(1).hide();
        $(".Refer.Top a").eq(0).show();
        $(".Refer.Top a").eq(1).hide();

        var ReferUrl = DeepReferrer.Tracking.CookieValue;
        var SourceCodeUrl = "Twitter";
        var ParsedURL = "";

        function parseURL(ReferUrl) {
            parsed_url = {}

            if (ReferUrl == null || ReferUrl.length == 0)
                return parsed_url;

            protocol_i = ReferUrl.indexOf('://');
            parsed_url.protocol = ReferUrl.substr(0, protocol_i);

            remaining_url = ReferUrl.substr(protocol_i + 3, ReferUrl.length);
            domain_i = remaining_url.indexOf('/');
            domain_i = domain_i == -1 ? remaining_url.length - 1 : domain_i;
            parsed_url.domain = remaining_url.substr(0, domain_i);
            parsed_url.path = domain_i == -1 || domain_i + 1 == remaining_url.length ? null : remaining_url.substr(domain_i + 1, remaining_url.length);

            domain_parts = parsed_url.domain.split('.');
            switch (domain_parts.length) {
                case 2:
                    parsed_url.subdomain = null;
                    parsed_url.host = domain_parts[0];
                    parsed_url.tld = domain_parts[1];
                    break;
                case 3:
                    parsed_url.subdomain = domain_parts[0];
                    parsed_url.host = domain_parts[1];
                    parsed_url.tld = domain_parts[2];
                    break;
                case 4:
                    parsed_url.subdomain = domain_parts[0];
                    parsed_url.host = domain_parts[1];
                    parsed_url.tld = domain_parts[2] + '.' + domain_parts[3];
                    break;
            }

            parsed_url.parent_domain = parsed_url.host + '.' + parsed_url.tld;

            if (parsed_url.parent_domain != "undefined.undefined")
                parsedhost = '?dr=' + parsed_url.parent_domain;
            else parsedhost = "";

            return parsedhost;
        }

        if (SourceCodeUrl == "CroweCareers") {
            /* if CroweCareers exists, set and forget everything else */
            ParsedURL = '?dr=' + "CroweCareers";
        }
        else if (SourceCodeUrl == "") {
            /* if no SourceCodeUrl exists, check deep referral */
            if (ReferUrl == undefined || ReferUrl == "---")
                parsedhost = "";
            else
                ParsedURL = parseURL(ReferUrl);
        }
        else {
            /* s_cid value */
            if (SourceCodeUrl != null)               
                ParsedURL = '?dr=' + SourceCodeUrl;
            else
                parsedhost = "";
        }

        $('#ApplyNow').attr('href', $('#ApplyNow').attr('href') + ParsedURL);

    });

    </script>

